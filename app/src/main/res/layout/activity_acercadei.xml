<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/llll"
    tools:context="com.example.suarezpc.datosabiertosws.acercadei">

    <Button
        android:id="@+id/button2"
        android:layout_width="81dp"
        android:layout_height="78dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="27dp"
        android:layout_marginTop="92dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_x="293dp"
        android:layout_y="418dp"
        android:background="@mipmap/home"
        android:onClick="salir" />

    <TextView
        android:id="@+id/id"
        android:layout_width="355dp"
        android:layout_height="71dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/textView5"
        android:layout_x="19dp"
        android:layout_y="66dp"
        android:text="Esta Aplicacion tiene como fin informar acerca de las lenguas nativas en colombia."
        android:textColor="@android:color/background_dark"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="332dp"
        android:layout_below="@+id/id"
        android:layout_x="26dp"
        android:layout_y="145dp"
        app:srcCompat="@mipmap/icon"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/id"
        android:layout_marginTop="10dp"
        android:layout_x="16dp"
        android:layout_y="119dp"
        android:text="Autor: Fernando Suarez B."
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_x="131dp"
        android:layout_y="4dp"
        android:fontFamily="cursive"
        android:text="Acerca de:"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="16dp" />

</AbsoluteLayout>